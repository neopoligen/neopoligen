{
  "build": {
    "beforeDevCommand": "tauri/make_sidecar",
    "beforeBuildCommand": "tauri/make_sidecar",
    "devPath": "../ui",
    "distDir": "../ui",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "neopoligen",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          { 
            "name": "../cli/target/release/neopoligen_cli", 
            "sidecard": true,
            "cmd": "neopoligen_cli"
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "externalBin": [
        "../cli/target/release/neopoligen_cli"
      ],
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "neopoligen",
        "width": 400,
        "height": 300,
        "x": 0,
        "y": 30
      }
    ]
  }
}
