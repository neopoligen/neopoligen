[!- import "macros.neojinja" as theme -!]
[! with count = 0 !]
[! for section in site.pages[page_id].ast !]
    [! if section.content.type == "footnote" !]
        [! if count == 0 !]
            <h2>Footnotes</h2>
            <ul>
            [! set count = count + 1 !]
        [! endif !]
        <li>[@ theme.output_payload(site, page_id, section) -@]</li>
    [! endif !]
[! endfor !]
[! if count > 0 !]
</ul>
[! endif !]
[! endwith !]