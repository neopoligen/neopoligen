[! import "includes/theme.neoj" as theme !]

<section class="h2-section flow">
<hgroup [@- section.attr_string @]>
[! for child in section.children !]
  [! if loop.first !]
    <h2 class="section-heading">
    [! for span in child.spans !]
      [@ theme.output_span("", "", span) @]
    [! endfor !]
    </h2>
    [! if section.attrs.subtitle !]
      <p class="section-subtitle">
      [! for span in section.attrs.subtitle !]
        [@ theme.output_span("", "", span) @]
      [! endfor !]
      </p>
    [! endif !]
  [! endif !]
[! endfor !]
</hgroup>


[! include "subsections/content-skip-one.neoj" !]
